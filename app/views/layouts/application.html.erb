<!DOCTYPE html>
<html>
  <head>
    <title>Loja</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= nav_bar brand: "Loja", brand_link: root_path do %>
      <%= menu_group do %>
        <%= menu_item "Criar novo produto", new_produto_path %>
      <% end %>
      <%= form_with url: produtos_search_path, method: :get,
          class: "navbar-form navbar-right" do |form| %>
        <div class="form-group">
          <%= form.text_field :nome, class: "form-control", placeholder: "Nome" %>
        </div>
        <%= form.submit "Buscar", class: "btn btn-default" %>
      <% end %>
    <% end %>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
