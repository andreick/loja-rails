<h1>Produtos</h1>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <td>Nome</td>
            <td>Descrição</td>
            <td>Preço</td>
            <td>Quantidade</td>
            <td colspan="1"></td>
        </tr>
    </thead>
    <tbody>
        <% @produtos.each do |produto| %>
        <tr>
            <td><%= produto.nome %></td>
            <td><%= produto.descricao %></td>
            <td><%= produto.preco %></td>
            <td><%= produto.quantidade %></td>
            <td><%= button_to "Remover", produto_path(produto.id),
                    method: :delete,
                    data: { confirm: "Tem certeza que deseja remover o produto #{produto.nome}?" },
                    class:"btn btn-danger" %></td>
        </tr>
        <% end %>
    </tbody>
</table>
